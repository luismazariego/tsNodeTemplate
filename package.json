{
  "name": "nodetskeleton",
  "version": "1.0.0",
  "description": "A skeleton for use typescript with NodeJs",
  "main": "./dist/index.js",
  "scripts": {
    "full-test": "rm -rf coverage/* && npm run build && jest --coverage --collectCoverageFrom=src/**",
    "test": "npm run build && jest --coverage --collectCoverageFrom=src/**",
    "build": "rm -rf dist/* && tsc --sourceMap false",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "pretty-quick": "pretty-quick",
    "pretty-check": "pretty-quick --check",
    "pre-commit": "npm run lint && npm run pretty-quick --staged && npm run test",
    "start": "node dist/index"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/harvic3/nodetskeleton"
  },
  "keywords": [
    "node",
    "ts",
    "skeleton",
    "nodejs",
    "typescript",
    "template"
  ],
  "author": "vickodev",
  "license": "MIT",
  "homepage": "https://github.com/harvic3/nodetskeleton/blob/master/README.md",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/koa": "^2.11.7",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/koa__cors": "^3.0.2",
    "@types/luxon": "^1.25.1",
    "@types/node": "^14.14.22",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-extended": "^1.0.10",
    "prettier": "^2.2.1",
    "pretty-quick": "^2.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^4.4.1",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^9.4.0",
    "luxon": "^1.25.0",
    "mapper-tsk": "^1.1.5",
    "node-fetch": "^2.6.1",
    "resources-tsk": "^1.1.9",
    "result-tsk": "^1.2.0",
    "validator-tsk": "^1.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  }
}
